<%= form_with(model: [ @issue, @issue.comments.build ], local: true) do |form| %>
    <div class="field form-group">
    <%= form.text_area :content, class: "form-control", rows: 2, required: true %>
  </div>

  <div class="actions form-group">
    <%= form.submit("Leave a comment", class: "btn btn-primary") %>
  </div>
<% end %>
