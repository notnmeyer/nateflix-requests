<%= form_with(model: [ @request, @request.comments.build ], local: true) do |form| %>
    <div class="field form-group">
    <%= form.text_area :content, class: "form-control", rows: 2, required: true %>
  </div>

  <div class="actions form-group">
    <%= form.submit("Leave a comment", class: "btn btn-primary") %>
    <% if @request.status != "pending" %>
      <%= form.submit("Leave a comment and reopen this request", class: "btn btn-outline-primary", name: "reopen_request") %>
    <% end %>
  </div>
<% end %>
