<% @comments.each do |comment| %>
  <div class="card-body">  
    <div class="comment-container card col-md-12">
      <div class="card-body">
        <%= pretty_email comment.author.email %>
        <small><%= time_ago_in_words(comment.created_at) %> ago</small>
        <p><%= comment.content %></p>
      </div>
    </div>
  </div>
<% end %>
