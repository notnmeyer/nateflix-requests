<ul class="list-group list-group-flush">
  <% @requests.each do |request| %>
    <li class="list-group-item">
      <div class="row">
        <div class="col-md-6">
          <span class="title"><%= request.title %></span>
          (<%= request.media_type %>)
          (<span class="<%= request.status %>"><%= request.status %></span>)
          <p class="notes"><%= request.notes %></p>
        </div>
        <div class="col-md-4">
          <small class="text-muted">
            <%= time_ago_in_words(request.created_at) %> ago by <%= pretty_email request.user.email %>
          </small>
        </div>
        <div class="col-md-2">
          <% if user_signed_in? && current_user.admin?%>
            <%= link_to "edit", edit_request_path(request) %>
            <%= link_to "delete", request_path(request), data: { turbo_method: :delete } %>
          <% end %>
          <%= link_to "details", request_path(request) %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
